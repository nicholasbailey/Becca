
def join(x, y, z, spacy) {
    xString = string(x);
    yString = string(y);
    zString = string(z);
    if (spacy) {
        return xString + " " + yString + " " + zString;
    } else {
        return xString + "-" + yString + "-" + zString;
    }
}


